                </td>
                @if ((item.req_autoriza == "1" && item.ind_autoriza != "1") || (item.req_autoriza2 == "1" && item.ind_autoriza2 != "1") || (item.req_autoriza3 == "1" && item.ind_autoriza3 != "1") || (item.req_autoriza4 == "1" && item.ind_autoriza4 != "1"))
