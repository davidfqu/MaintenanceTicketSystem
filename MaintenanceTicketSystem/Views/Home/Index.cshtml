{
    <table class="table">
        <tr>
            <th>
                @Html.ActionLink("Folio", "Index", new { sortOrder = ViewBag.FolioSortParm, currentFilter = ViewBag.CurrentFilter,searchOption = ViewBag.CurrentSearch })
