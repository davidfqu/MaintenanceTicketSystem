
@{
    ViewBag.Title = "DashboardSis";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row my-3">
        <div class="col">
            <h4>Dashboard</h4>
        </div>
    </div>
    <div class="row my-2">
        <div class="col-md-3">
            <div class="card">
                <div class="card-header text-center">
                    <h1 class="mb-2 mb-sm-0 pt-1 font-weight-bold" style="font-size: 1.3vw">
                        Cerrados/Abiertos
                    </h1>
                </div>
                <div class="card-body">
                    <canvas id="fac" height="240"></canvas>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card">
                <div class="card-header text-center">
                    <h1 class="mb-2 mb-sm-0 pt-1 font-weight-bold" style="font-size: 1.3vw">
                        Tickets con mayor tiempo abiertos
                    </h1>
                </div>
                <div class="card-body">
                    <canvas id="chLine" height="65"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mt-4">
                <div class="card-header text-center">
                    <h1 class="mb-2 mb-sm-0 pt-1 font-weight-bold" style="font-size: 1.3vw">
                        Tickets por atender
                    </h1>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th scope="col"></th>
                                <th scope="col">Folio</th>
                                <th scope="col">Usuario</th>
                                <th scope="col">Categoría</th>
                                <th scope="col">Fecha compromiso</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int n = 1;

                            }
                            @foreach (var item in ViewBag.ticketsPA)
                            {
                                <tr>
                                    <th scope="row">@n.ToString()</th>
                                    <td>@item.folio</td>
                                    <td>@item.u_id</td>
                                    <td>@item.t_catego.descripcion</td>
                                    <td>@item.f_compromiso</td>
                                    @{n++;}
                                </tr>
                                        }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-6 mt-4">
            <div class="card">
                <div class="card-header text-center">
                    <h1 class="mb-2 mb-sm-0 pt-1 font-weight-bold" style="font-size: 1.3vw">
                        Promedio de ciclo de vida de ticket
                    </h1>
                </div>
                <div class="card-body text-center">
                    <h1 class="mb-2 mb-sm-0 pt-1 font-weight-bold" style="font-size: 3vw">
                        @ViewBag.ciclovida hrs
                    </h1>
                </div>
            </div>
        </div>



    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/Chart.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels"></script>
<script>
    $(document).ready(function () {

        var ctxD = document.getElementById("fac").getContext('2d');
        var myLineChart = new Chart(ctxD, {
            type: 'doughnut',
            data: {
                labels: ["Tickets cerrados", "Tickets abiertos"],
                datasets: [{
                    data: [@ViewBag.cerrados, @ViewBag.abiertos],
                    backgroundColor: ["#139401", "#e6e8eb"],
                    hoverBackgroundColor: ["#0d6601", "#616774"]
                }]
            },
            options: {
                responsive: true,
                legend: { display: false },
                plugins: {
                    // Change options for ALL labels of THIS CHART
                    datalabels: {
                        color: "rgb(0,0,0)",
                        font: function(context) {
                            var height = context.chart.height;
                            var size = Math.round(height / 6);
                            return {
                                size: size

                            };

                        },

                    }
                }
            }
        });


        var ctx = document.getElementById("chLine").getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels:@ViewBag.labelsgraph,
                datasets: [{
                    label: 'Días abierto',
                    data: @ViewBag.datagraph,
                    backgroundColor:@Html.Raw(ViewBag.bgcolorgraph),
                    borderColor: @Html.Raw(ViewBag.bocolorgraph),
                    borderWidth: 1
                }]
            },
            options: {
                legend: { display: false },
                scales: {
                    yAxes: [{
                        scaleLabel: {
                            labelString: "Días",
                            display: true,
                            fontSize: Math.round(document.documentElement.clientHeight/ 50)
                        },
                        ticks: {
                            fontSize: Math.round(document.documentElement.clientHeight/ 55),
                            beginAtZero: true
                        }
                    }],
                    xAxes: [{
                        scaleLabel: {
                            labelString: "Folio",
                            display: true,
                            fontSize: Math.round(document.documentElement.clientHeight/ 50)
                        },
                        ticks: {
                            fontSize: Math.round(document.documentElement.clientHeight/ 55),
                            beginAtZero: true
                        }
                    }]
                },
                plugins: {
                    // Change options for ALL labels of THIS CHART
                    datalabels: {
                        color: "rgb(0,0,0)",
                        font: function(context) {
                            var height = context.chart.height;
                            var size = Math.round(height / 10);
                            return {
                                size: size

                            };

                        },

                    }
                }

            }
        });




    });

</script>