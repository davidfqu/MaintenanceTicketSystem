@model MaintenanceTicketSystem.Models.t_config

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Configuraciones de sistema</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-row">
        
       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.clave)
        @Html.HiddenFor(model => model.server)
        @Html.HiddenFor(model => model.send_paswd)
        @Html.HiddenFor(model => model.send_email)
        @Html.HiddenFor(model => model.port)
        @Html.HiddenFor(model => model.ind_html)
        @Html.HiddenFor(model => model.ind_ssl)
        @Html.HiddenFor(model => model.autoriza_superv)
        @Html.HiddenFor(model => model.autoriza_seh)
        @Html.HiddenFor(model => model.aler_validaseh)
        @Html.HiddenFor(model => model.path_imgs)
        @Html.HiddenFor(model => model.ind_testmail)
        @Html.HiddenFor(model => model.testmail)


        <div class="form-group col-12">
                <label>Planta</label>
                @Html.EditorFor(model => model.planta, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.planta, "", new { @class = "text-danger" })
        </div>
        <br />
        <div class="form-group col-6">
                 <h3>Alertas</h3>
                 <br />
                 <input data-val="true" id="env_correos" name="env_correos" type="checkbox" value="1" class="form-check-input ml-1" @(Model.env_correos == "1" ? "checked='checked'" : "") />
                 <input name="env_correos" type="hidden" value="0" />
                 <label class="ml-4">Habilitar enviador de correos</label>     
                 <br />
                 <input data-val="true" id="aler_gerente" name="aler_gerente" type="checkbox" value="1" class="form-check-input ml-1" @(Model.aler_gerente == "1" ? "checked='checked'" : "") />
                 <input name="aler_gerente" type="hidden" value="0" />
                 <label class="ml-4">Enviar alerta de al supervisor de soliciante</label> 
                 <br />
                 <input data-val="true" id="aler_super" name="aler_super" type="checkbox" value="1" class="form-check-input ml-1" @(Model.aler_super == "1" ? "checked='checked'" : "") />
                 <input name="aler_super" type="hidden" value="0" />
                 <label class="ml-4">Enviar alerta de ticket al gerente de mantenimiento</label> 
                 <br />
                 <input data-val="true" id="aler_compromiso" name="aler_compromiso" type="checkbox" value="1" class="form-check-input ml-1" @(Model.aler_compromiso == "1" ? "checked='checked'" : "") />
                 <input name="aler_compromiso" type="hidden" value="0" />
                 <label class="ml-4">Activar alerta de vencimiento de fecha compromiso</label>
                 <br />
                 <input data-val="true" id="aler_revision" name="aler_revision" type="checkbox" value="1" class="form-check-input ml-1" @(Model.aler_revision == "1" ? "checked='checked'" : "") />
                 <input name="aler_revision" type="hidden" value="0" />
                 <label class="ml-4">Enviar alerta tickets en estatus "Revisión"</label>
                 <br />
                 <br />
                 <label>Días en "Revisión" permitidos para mandar alerta</label>
                 @Html.EditorFor(model => model.dias_revision, new { htmlAttributes = new { @class = "form-control" } })
                 @Html.ValidationMessageFor(model => model.dias_revision, "", new { @class = "text-danger" })
        </div>

        

        <div class="form-group col-6">
                <h4>Correos de autorización</h4>
                <br />
                <label class="mt-2" >Gerente de mantenimiento</label>
                @Html.EditorFor(model => model.gte_email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.gte_email, "", new { @class = "text-danger" })
                
                <label class="mt-2">EHS</label>
                @Html.EditorFor(model => model.gte_email2, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.gte_email2, "", new { @class = "text-danger" })
             
                <label class="mt-2">Gerente de ingeniería</label>
                @Html.EditorFor(model => model.gte_email3, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.gte_email3, "", new { @class = "text-danger" })
        </div>

        <br />
        <div class="form-group col-9 m-1">
                <button id="botonbueno" type="submit" value="Guardar" class="btn btn-outline-primary btn-lg btn-block" />
            <button id="botonfalso"type="button" class="btn btn-outline-primary btn-lg btn-block">Guardar</button>
        </div>
    </div>
}

<script>
    $('#botonbueno').hide();

    $("#botonfalso").click(function () {
        $("#botonbueno").click();
    });
</script>
