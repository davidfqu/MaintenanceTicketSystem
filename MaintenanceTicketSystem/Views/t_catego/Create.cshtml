        <h4>Categoría</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.categoria,"Clave", htmlAttributes: new { @class = "control-label col-md-2" })
