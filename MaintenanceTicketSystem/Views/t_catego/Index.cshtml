@model IEnumerable<MaintenanceTicketSystem.Models.t_catego>

@{
    ViewBag.Title = "Index";
}

<h2>Categorías</h2>

<p>
    @Html.ActionLink("Crear", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Clave
        </th>
        <th>
            Nombre
        </th>
        <th>
            Descripción
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.categoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nota)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.categoria }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.categoria })
        </td>
    </tr>
}

</table>
